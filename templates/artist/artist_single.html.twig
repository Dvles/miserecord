{% extends 'base.html.twig' %}

{% block title %}{{ artist.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ artist.name }}</h1>
        <div class="row">
            <!-- Left Column: Artist Image, Full Name, Bio, Date of Birth -->
            <div class="col-md-6">
                <div class="artist-image">
                    {% if artist.artistPhotos|length > 0 %}
                        <img src="{{ asset(artist.artistPhotos|first.filePath) }}" alt="{{ artist.name }}" class="img-fluid">
                    {% else %}
                        <p>No image available</p>
                    {% endif %}
                </div>
                {% if artist.firstName is not empty %}
                    <p><strong></strong> {{ artist.firstName }} {{ artist.lastName }}</p>
                {% endif %}
                {% if artist.isBand == false %}                    <p> {{ artist.birthdate|date('F j, Y') }}</p>
                {% endif %}
                <p><strong></strong> {{ artist.bio }}</p>
            </div>

            <!-- Right Column: Discography -->
            <div class="col-md-6">
                
                <h2>Discography</h2>
                
                {% if artist.album is not empty %}
                    <h3>Albums</h3>
                    <ul>
                        {% set sortedAlbums = artist.album|sort((a, b) => b.releaseDate <=> a.releaseDate) %}
                        {% for album in sortedAlbums %}
                            <li>
                                {{ album.title }} ({{ album.releaseDate|date('Y') }})
                                <a href="{{ path('album_detail', {'id': album.id}) }}" class="info-button" title="More info">
                                    <i class="fas fa-circle-info"></i>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>No albums available.</p>
                {% endif %}
                
                {% if artist.single is not empty %}
                    <h3>Singles</h3>
                    <ul>
                        {% for single in artist.single|sort((a, b) => b.releaseDate <=> a.releaseDate)|slice(0, 10) %}
                            <li>
                                {{ single.title }} ({{ single.releaseDate|date('Y') }})
                                {% if single.spotifyLink %}
                                    - <a href="{{ single.spotifyLink }}" target="_blank">Listen on Spotify</a>
                                {% endif %}
                                <a href="{{ path('single_detail', {'id': single.id}) }}" class="info-button" title="More info">
                                    <i class="fas fa-circle-info"></i>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>No singles available.</p>
                {% endif %}
            </div>
        </div>
        <a href="{{ path('artist_list') }}" class="btn btn-primary mt-3">Return to Artist List</a>
    </div>
    {% if relatedProducts is not empty %}
    <h2>Related Products</h2>
    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for product in relatedProducts %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <a href="{{ path('product_detail', { id: product.id }) }}">
                        <img src="{{ product.img }}" class="d-block w-100" alt="{{ product.name }}">
                    </a>
                </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
{% endif %}



{% endblock %}


{% block stylesheets %}
    <style>
        /* Ensure images are responsive and have a nice margin */
        .artist-image img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        p{
            font-size:14px;
        }

        h2{
            font-size: 20px !important;
        }

        h3{
            font-size: 15px !important;
        }

        /* Optional: Add some padding and spacing between sections */
        .artist-image, .artist-bio, .discography {
            margin-bottom: 20px;
        }

        /* Styling for the return button */
        .btn {
            background-color: #FFEA00;
            color: #000;
            border: none;
        }

        .btn:hover {
            background-color: #FFC107;
        }

        .info-button i {
            color: white; /* Default color is white */
            transition: color 0.3s ease; /* Smooth transition on hover */
        }

        .info-button:hover i {
            color: #FFEA00; /* Yellow on hover */
        }

        .carousel-item img {
            max-height: 200px; /* Reduce image height */
            width: auto; /* Maintain aspect ratio */
            object-fit: contain; /* Ensure the full image is visible */
            border-radius: 10px;
            margin: auto; /* Center the image */
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.7);
            padding: 5px;
            border-radius: 5px;
            font-size: 14px; /* Smaller text */
        }

            </style>
{% endblock %}
