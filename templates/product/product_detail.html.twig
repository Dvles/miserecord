{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Product Details{% endblock %}

{% block body %}
    <div class="product-detail-container">
        <h1>{{ product.name }}</h1>
        <img src="{{ product.img }}" alt="{{ product.name }}" class="product-image">
        
        <p><strong>Price:</strong> ${{ product.price }}</p>
        <p><strong>Type:</strong> {{ product.type.value }}</p>
        <p><strong>Description:</strong> {{ product.description }}</p>

        {% if product.artists|length > 0 %}
            <p><strong>Artists:</strong> 
                {% for artist in product.artists %}
                    {{ artist.artistName }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </p>
        {% endif %}

        <a href="{{ path('product_list') }}" class="btn btn-primary">Back to Products</a>
    </div>
{% endblock %}
