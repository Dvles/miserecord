{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <div class="container">
        <h1>SHOP</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="product-card card border-0 shadow-sm">
                        <div class="card-body">
                            <h2 class="product-name text-end">
                                <a href="{{ path('product_detail', { id: product.id }) }}">
                                    {{ product.name }}
                                </a>
                            </h2>
                            <div class="product-photo-wrapper">
                                <a href="{{ path('product_detail', { id: product.id }) }}">
                                    <img src="{{ product.img }}" alt="{{ product.name }}" class="img-fluid product-img">
                                </a>
                            </div>
                            <p class="product-price text-end">
                                ${{ product.price }}
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No products available.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <style>
        /* Add global styles for the product list */
        .product-card {
            background-color: transparent !important;
        }

        .product-name {
            font-size: 14px;
            font-weight: bold !important;
            text-align: right;
            color: white;
            margin-bottom: 10px;
        }

        /* Styling the product name links */
        .product-name a {
            color: grey;
            text-decoration: none;
            
        }

        .product-name a:hover {
            color: #FFEA00; 
        }

        /* Wrapper for product image */
        .product-photo-wrapper {
            position: relative;
            overflow: hidden;
            width: 100%;
            padding-top: 100%; /* Keeps the image square */
        }

        .product-photo-wrapper img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;  /* Ensures the image scales correctly */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        /* Hover effect on the product image */
        .product-photo-wrapper:hover img {
            transform: scale(1.1);  /* Zoom effect on hover */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        /* Price Styling */
        .product-price {
            color: #FFEA00;  /* Gold color for price */
            font-size: 1.25rem;
            font-weight: bold;
            text-align: right;
            margin-top: 10px;
        }

        .product-price:hover {
            color: #FFEA00;  /* Ensure the price is highlighted on hover */
        }

        /* Optional: Add a shadow to the cards for a more polished look */
        .product-card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
    </style>
{% endblock %}

