{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center text-white">SHOP</h1>

        <!-- Product Type Filter Dropdown -->
<form method="get" action="{{ path('product_list') }}" class="mb-4">
    <label for="product-type" class="text-white">Filter by Product Type:</label>
    <select id="product-type" name="type" class="form-select" onchange="this.form.submit()">
        <option value="">All</option>
        <option value="artwork" {% if selectedType == 'artwork' %}selected{% endif %}>Artwork</option>
        <option value="vinyl" {% if selectedType == 'vinyl' %}selected{% endif %}>Vinyl</option>
        <option value="merch" {% if selectedType == 'merch' %}selected{% endif %}>Merch</option>
    </select>
</form>


        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="product-card card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="product-photo-wrapper">
                                <a href="{{ path('product_detail', { id: product.id }) }}">
                                    <img src="{{ product.img }}" alt="{{ product.name }}" class="img-fluid product-img">
                                </a>
                            </div>
                            <h2 class="product-name">
                                <a href="{{ path('product_detail', { id: product.id }) }}">
                                    {{ product.name }}
                                </a>
                            </h2>

                            <!-- Display Artist Name Below Product Name -->
                            <p class="artist-name">
                                {% for artist in product.artists %}
                                    <a href="{{ path('artist_profile', { artist_id: artist.id }) }}">
                                        {{ artist.artistName }}
                                    </a>{% if not loop.last %}, {% endif %}
                                {% else %}
                                    <span class="text-muted">Unknown Artist</span>
                                {% endfor %}
                            </p>

                            <p class="product-price">
                                ${{ product.price }}
                            </p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-white">No products available.</p>
            {% endfor %}
        </div>
    </div>

    <style>
        .product-card {
            background-color: transparent !important;
            margin-top: 100px;
        }

        .product-photo-wrapper {
            position: relative;
            overflow: hidden;
            width: 100%;
            padding-top: 100%;
        }

        .product-photo-wrapper img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-photo-wrapper:hover img {
            transform: scale(1.1);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .product-name {
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            text-align: right;
            margin-top: 10px;
        }

        .product-name a {
            color: white;
            text-decoration: none;
        }

        .product-name a:hover {
            color: #FFEA00;
        }

        .artist-name {
            font-size: 0.9rem;
            font-weight: normal;
            text-align: right;
            text-transform: uppercase;
            font-weight: bold;
        }

        .artist-name a {
            color: grey;
            text-decoration: none;
        }

        .artist-name a:hover {
            color: #FFEA00;
        }

        .product-price {
            color: #E6007E;
            font-size: 1.25rem;
            font-weight: bold;
            text-align: right;
            margin-top: 10px;
        }

        .product-card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
    </style>
{% endblock %}
