<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Landing Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
</head>
<body>
    <div class="wrapper">
        <header>{% include "/includes/nav.html.twig" %}</header>
        <main class="content">
            {% block body %}{% endblock %}
            <p id="back-to-top" class="back-to-top-btn">Back to Top â‡¥</p>
        </main>
        <footer>{% include "/includes/footer.html.twig" %}</footer>
    </div>

    <!-- The background circle -->
    <div id="background-circle"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const circle = document.getElementById("background-circle");

            // Track the scroll event
            window.addEventListener("scroll", function () {
                const scrollPosition = window.scrollY;
                const maxScale = 100;  // Maximum size factor
                const scaleValue = 1 + (scrollPosition / 1000);  // Scale based on scroll

                // Apply a limit to avoid the circle growing too large
                const scale = Math.min(scaleValue, maxScale);

                // Update the size of the circle dynamically
                circle.style.transform = `scale(${scale})`;
            });
        });

          


        document.addEventListener("DOMContentLoaded", function () {
        const backToTopBtn = document.getElementById("back-to-top");

        // Show the button when the user scrolls down
        window.addEventListener("scroll", function () {
            if (window.scrollY > 200) {  // Show the button after scrolling down 200px
                backToTopBtn.style.display = "block";
            } else {
                backToTopBtn.style.display = "none";
            }
        });


        // Scroll to the top when the button is clicked
        backToTopBtn.addEventListener("click", function () {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });


    });

    </script>

    <style>
        /* The background circle style */
        #background-circle {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100px; /* Initial size */
            height: 100px; /* Initial size */
            background-color:rgba(255, 234, 0, 0.11); /* Yellow color */
            border-radius: 50%;
            z-index: -1; /* Make sure it's in the background */
            transition: transform 0.1s ease-out; /* Smooth transition */
        }

        /* The back-to-top button (you already have this) */
        .back-to-top-btn {
            position: fixed;
            bottom: 30px;
            right: 20px;
            background: transparent;
            border: none;
            color: grey;
            font-size: 14px;
            text-transform: uppercase;
            cursor: pointer;
            display: none;
            transition: opacity 0.3s ease;
            z-index: 9999; 
            text-transform: uppercase;
            writing-mode: vertical-rl; 
            transform: rotate(180deg); 
            white-space: nowrap; 
        }

        .back-to-top-btn:hover {
            color: #FFEA00;
        }
    </style>
</body>
</html>
